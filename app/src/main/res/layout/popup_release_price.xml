<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="价格"
            style="@style/popup_release_price_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/popup_release_price_inputPrice"
            style="@style/popup_release_price_text"
            android:text="￥" />

        <EditText
            android:id="@+id/popup_release_price_inputPrice"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            style="@style/release_EditText"
            android:textSize="20sp"
            android:hint="0.00"
            android:inputType="number"/>

        <CheckBox
            android:id="@+id/popup_release_price_discuss"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/popup_release_price_discuss"
            style="@style/popup_release_price_text"
            android:text="不议价"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/Cutting_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            style="@style/popup_release_price_text"
            android:text="入手价" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/popup_release_price_inputFirstPrice"
            style="@style/popup_release_price_text"
            android:text="￥" />

        <EditText
            android:id="@+id/popup_release_price_inputFirstPrice"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            style="@style/release_EditText"
            android:hint="0.00"
            android:inputType="number"/>

    </RelativeLayout>
    <Button
        android:id="@+id/popup_release_price_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:text="提交"
        android:elevation="0dp"
        android:background="#e6d345"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>
</LinearLayout>